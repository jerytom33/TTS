// Usage Analytics
model UsageAnalytics {
  id            String   @id @default(cuid())
  userId        String?
  eventType     String   // project_created, audio_generated, video_rendered, etc.
  eventData     String?  // JSON string of event data
  userAgent     String?
  ipAddress     String?
  createdAt     DateTime @default(now())

  @@map("usage_analytics")
}

// Enums
enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum ProjectStatus {
  DRAFT
  PROCESSING
  COMPLETED
  FAILED
}

enum VoiceGender {
  MALE
  FEMALE
  NEUTRAL
}